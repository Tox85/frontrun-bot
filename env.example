# Configuration de base
NODE_ENV=development
LOG_LEVEL=debug
LOG_FORMAT=pretty
PORT=3000
HEALTH_PORT=3000

# Instance ID (pour le leadership)
INSTANCE_ID=bot-1

# Base de données
DATABASE_PATH=./data/bot.db

# Exchanges
ENABLE_HYPERLIQUID=true
HYPERLIQUID_TESTNET=true
HYPERLIQUID_WALLET_ADDRESS=your_wallet_address_here
HYPERLIQUID_PRIVATE_KEY=your_private_key_here
HL_API_URL=https://api.hyperliquid-testnet.xyz
HL_WS_URL=wss://api.hyperliquid-testnet.xyz

ENABLE_BINANCE=false
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET=your_binance_secret

ENABLE_BYBIT=false
BYBIT_API_KEY=your_bybit_api_key
BYBIT_SECRET=your_bybit_secret

# Bithumb (détection uniquement)
ENABLE_BITHUMB=true
ENABLE_UPBIT=false

# Telegram
ENABLE_TELEGRAM=false
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Trading
TRADING_ENABLED=false
TRADE_AMOUNT_USDT=400
LEVERAGE=20
POSITION_SIZE_USDC=400
DRY_RUN=true

# Risk Management
RISK_PER_TRADE_USD=400
RISK_PER_TRADE_USDC_DEFAULT=0.5
RISK_PCT=0.15
LEVERAGE_TARGET=8
MAX_LEVERAGE_DEFAULT=8
ORDER_TIMEOUT_MS=15000
PERP_CHECK_TIMEOUT_MS=200

# Stratégie de Protection
MAX_RISK_PER_TRADE=0.20
STOP_LOSS_PERCENT=8
TAKE_PROFIT_PERCENT=15

# Circuit Breaker
CIRCUIT_BREAKER_MAX_ERRORS=3
CIRCUIT_BREAKER_COOLDOWN_MS=3600000

# Exit Strategy +180s
EXIT_DELAY_MS=180000
EXIT_STRATEGY=REDUCE_ONLY

# Monitoring
ENABLE_GLOBAL_MONITORING=false
ENABLE_KOREAN_LOGS=false
ENABLE_VERBOSE_LOGS=true

# Debug
ENVZ_ENABLED=false

# Optimisations des timeouts et performances
UPBIT_POLL_MS=2000
EXIT_TIMEOUT_MINUTES=3
BINANCE_INDEX_REFRESH_MS=600000
SLIPPAGE_CAP_PCT=2
SYMBOL_MUTEX_TTL_MS=300000
HTTP_TOKEN=frontrun-bot-2024

UPBIT_TIMEOUT_MS=15000
UPBIT_MAX_RETRIES=3
UPBIT_RETRY_DELAY_MS=2000
BINANCE_TIMEOUT_MS=20000
BINANCE_BATCH_SIZE=50
API_RATE_LIMIT_MS=100

# Baseline REST circuit-breaker
BL_CB_ERRORS_BEFORE_OPEN=3
BL_CB_OPEN_MS=60000
BL_HTTP_TIMEOUT_MS=1500
BL_HTTP_RETRIES=2

# T0 (NoticeClient)
T0_HTTP_TIMEOUT_MS=1200
T0_HTTP_RETRIES=1
POLL_JITTER_PCT=0.15

# Backoffs
RETRY_BASE_MS=30000
RETRY_MAX_MS=600000

# Health/log
LOG_DEDUP_WINDOW_MS=60000
LOG_DEDUP_MAX_PER_WINDOW=2
MAX_NOTICE_AGE_MIN=180

# WebSocket T2
WS_ENABLED=true
WS_DEBOUNCE_MS=10000
WS_WARMUP_MS=5000

# T0 Polling
T0_POLL_INTERVAL_MS=1100
T0_MAX_NOTICES_PER_POLL=10
