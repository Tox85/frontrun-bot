# Configuration Production Testnet - Bot Frontrun Bithumb-only
# Fichier: config.production.testnet.env
# Dernière mise à jour: 2024-12-19

# ============================================================================
# TELEGRAM NOTIFICATIONS
# ============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================================================
# HYPERLIQUID TESTNET (TRADING)
# ============================================================================
HYPERLIQUID_API_KEY=your_hyperliquid_api_key_here
HYPERLIQUID_SECRET=your_hyperliquid_private_key_here
HYPERLIQUID_WALLET_ADDRESS=0x56c77757076101F6beB5397C791077548459bef9

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================
TRADING_ENABLED=true
MAX_POSITION_SIZE_USD=100
RISK_PERCENT=2

# ============================================================================
# T0 DETECTION (NOTICE POLLER)
# ============================================================================
T0_POLL_INTERVAL_MS=1100
T0_MAX_NOTICES_PER_POLL=10

# ============================================================================
# T2 DETECTION (WEBSOCKET)
# ============================================================================
WS_ENABLED=true
WS_DEBOUNCE_MS=10000
WS_WARMUP_MS=5000

# ============================================================================
# HTTP SERVER
# ============================================================================
HTTP_PORT=3001

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_PATH=./data/bot.db

# ============================================================================
# WATERMARK & LOG DEDUP (NOUVELLES VARIABLES)
# ============================================================================
# Âge maximum des notices à traiter (en minutes)
MAX_NOTICE_AGE_MIN=180

# Fenêtre de déduplication des logs (en millisecondes)
LOG_DEDUP_WINDOW_MS=60000

# Nombre maximum de logs par fenêtre de déduplication
LOG_DEDUP_MAX_PER_WINDOW=2

# ============================================================================
# INSTANCE ID (AUTO-GÉNÉRÉ)
# ============================================================================
INSTANCE_ID=105e3c12-105e-401f-a199-d6419239de81
